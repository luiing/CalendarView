<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
       	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
		android:layout_gravity="center"
       	android:background="#ffffffff"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/cv_fillet_dialog_button"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<ImageView android:id="@+id/cv_dialog_left"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:src="@drawable/cv_chevron_start"
			           android:clickable="true"
			           android:layout_marginLeft="10dp"
				/>
			<TextView android:id="@+id/cv_dialog_date"
			          android:layout_width="0dp"
			          android:layout_weight="1"
			          android:layout_height="match_parent"
			          android:textSize="16sp"
			          android:textColor="#333333"
			          android:gravity="center"
				/>
			<ImageView android:id="@+id/cv_dialog_right"
			           android:layout_width="wrap_content"
			           android:layout_height="wrap_content"
			           android:src="@drawable/cv_chevron_end"
			           android:clickable="true"
			           android:layout_marginRight="10dp"
				/>
		</LinearLayout>

		<com.uis.calendarview.CalendarView
			android:id="@+id/cv_dialog_calendarView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:monthViewId="@layout/cv_dialog_calendar_month"
			>
		</com.uis.calendarview.CalendarView>
		<TableRow android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:layout_gravity="right"
		          android:background="#ffffff"
			>
			<TextView
				android:id="@+id/cv_dialog_button_cancel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="#FF0091CD"
				android:textSize="15sp"
				android:text="取消"
				android:paddingLeft="10dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:paddingRight="10dp"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:clickable="true"
				/>
			<TextView
				android:id="@+id/cv_dialog_button_ok"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="#FF0091CD"
				android:textSize="15sp"
				android:text="确定"
				android:paddingRight="10dp"
				android:paddingLeft="10dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:layout_marginRight="15dp"
				android:clickable="true"
				/>
		</TableRow>
	</LinearLayout>
</RelativeLayout>